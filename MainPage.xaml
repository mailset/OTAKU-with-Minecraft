<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OTAKU_with_Minecraft.MainPage"
             BackgroundColor="#c93756">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label
                x:Name="WelcomeLable"
                Text="这里是OTAKU with Minecraft启动器！"
                HorizontalOptions="Center"
                FontSize="18"
                TextColor="#f0f0f4"
                />

            <Label
                x:Name="About"
                Text="OTAKU with Minecher(OwM) 是一个新的Minecraft启动器，她由MaUI编写，并且遵守GPLv3开源协议进行开源的说！"
                HorizontalOptions="Center"
                FontSize="14"
                TextColor="#f0f0f4"
                />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
